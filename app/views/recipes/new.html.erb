<%= form_for @recipe do |f| %>
    <h1>Recipe</h1><br />
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <h1>Ingredients: </h1>
    <%= f.fields_for :ingredients do |ingr| %>
        <%= ingr.label :name %>
        <%= ingr.text_field :name %><br>
        <%= ingr.label :quantity %>
        <%= ingr.text_field :quantity %><br><br>
    <% end %>

    <%= f.submit  %>
<% end %>
